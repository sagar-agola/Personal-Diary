@model DailySummaryBM

@{
    ViewData["Title"] = "Remove Daily Summary";
}

<div class="card">
    <div class="card-header">
        <h1 class="card-title">
            Remove Daily Summary
        </h1>
    </div>
    <div class="card-body">
        <h4>
            <b>Are you sure to remove this daily summary?</b>
        </h4>

        <div>
            <b>Id : </b> @Model.Id<br />
            <b>Date First Created : </b> @($"{ Model.DateCreated.ToLongDateString () } { Model.DateCreated.ToShortTimeString () }")<br />
            <b>Date Last Modified : </b> @($"{ Convert.ToDateTime(Model.DateModified).ToLongDateString () } { Convert.ToDateTime(Model.DateModified).ToShortTimeString () }")<br /><br />
        </div>

        <form asp-action="Remove" mothod="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="submit" value="Remove" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-success">Cancel</a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Read Summary</a>
        </form>
    </div>
</div>